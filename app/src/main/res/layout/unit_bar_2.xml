<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:id="@+id/topUnitBar"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="1px">

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:id="@+id/unitBlock1"
            app:cardBackgroundColor="#7D1E72">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="천"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:fontFamily="@font/cookie_run_regular"
                android:gravity="center"
                android:textSize = "18sp"
                android:textColor="@color/colorBrightYellow"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:id="@+id/unitBlock2"
            app:cardBackgroundColor="#331269">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="백"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:fontFamily="@font/cookie_run_regular"
                android:gravity="center"
                android:textSize = "18sp"
                android:textColor="@color/colorBrightYellow"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:id="@+id/unitBlock3"
            app:cardBackgroundColor="#03569A">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="십"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:fontFamily="@font/cookie_run_regular"
                android:gravity="center"
                android:textSize = "18sp"
                android:textColor="@color/colorBrightYellow"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:id="@+id/unitBlock4"
            app:cardBackgroundColor="#038CC2">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="일"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:fontFamily="@font/cookie_run_regular"
                android:gravity="center"
                android:textSize = "18sp"
                android:textColor="@color/colorBrightYellow"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:id="@+id/unitBlock5"
            app:cardBackgroundColor="#028178">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="천"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:fontFamily="@font/cookie_run_regular"
                android:gravity="center"
                android:textSize = "18sp"
                android:textColor="@color/colorBrightYellow"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:id="@+id/unitBlock6"
            app:cardBackgroundColor="#018E40">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="백"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:fontFamily="@font/cookie_run_regular"
                android:gravity="center"
                android:textSize = "18sp"
                android:textColor="@color/colorBrightYellow"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:id="@+id/unitBlock7"
            app:cardBackgroundColor="#A7D210">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="십"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:fontFamily="@font/cookie_run_regular"
                android:gravity="center"
                android:textSize = "18sp"
                android:textColor="@color/colorChocolate"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:id="@+id/unitBlock8"
            app:cardBackgroundColor="#FFEA4F">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="일"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:fontFamily="@font/cookie_run_regular"
                android:gravity="center"
                android:textSize = "18sp"
                android:textColor="@color/colorChocolate"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:id="@+id/unitBlock9"
            app:cardBackgroundColor="#E38A24">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="천"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:fontFamily="@font/cookie_run_regular"
                android:gravity="center"
                android:textSize = "18sp"
                android:textColor="@color/colorChocolate"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:id="@+id/unitBlock10"
            app:cardBackgroundColor="#D62E21">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="백"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="1sp"
                android:fontFamily="@font/cookie_run_regular"
                android:gravity="center"
                android:textSize = "18sp"
                android:textColor="@color/colorChocolate"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.55"
        android:id="@+id/bottomUnitBar"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="1px"
        android:paddingBottom="2dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:id="@+id/bottomUnitBlock1"
            app:cardBackgroundColor="#E0E1F6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="1sp"
                    android:text="경"
                    android:fontFamily="@font/cookie_run_regular"
                    android:gravity="center"
                    android:textSize = "20sp"
                    android:textColor="@color/colorChocolate"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:id="@+id/bottomUnitBlock2"
            app:cardBackgroundColor="#D9F8CF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="조"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="1sp"
                    android:fontFamily="@font/cookie_run_regular"
                    android:gravity="center"
                    android:textSize = "20sp"
                    android:textColor="@color/colorChocolate"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:id="@+id/bottomUnitBlock3"
            app:cardBackgroundColor="#FFE2E7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="억"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="1sp"
                    android:fontFamily="@font/cookie_run_regular"
                    android:gravity="center"
                    android:textSize = "20sp"
                    android:textColor="@color/colorChocolate"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>