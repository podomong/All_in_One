<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"

    app:cardBackgroundColor="@color/colorChocolate"
    app:cardCornerRadius="32dp"
    app:cardElevation="2dp"
    app:contentPadding="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contentNumber"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/cookie_run_regular"
            android:textColor="@color/colorBrightYellow"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/contentInstruction"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:fontFamily="@font/cookie_run_regular"
            android:textColor="@color/colorBrightYellow"
            android:textSize="24sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>